@model AcaiConnUnificada.Models.Produto

@{
    ViewData["Title"] = "Apagar";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que você quer apagar esse produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
    
    <form asp-action="Erase">
        <a asp-action="Erase" class="btn btn-danger" asp-route-id="@Model.Id">Apagar</a>
        <a asp-action="Index" class="btn btn-secondary ms-3">Voltar à lista</a>
    </form>
</div>
